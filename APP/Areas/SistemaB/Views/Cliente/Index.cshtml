@{
    ViewData["Title"] = "Cliente";
}

<div id="loading-screen">
    <div class="loader"></div>
    <p style="color: white">Carregando...</p>
</div>

<div id="dadosCliente"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("ObterDadosCliente", "Cliente")',
                type: 'GET',
                success: function (data) {
                    $('#loading-screen').hide();
                    $('#dadosCliente').html(data);
                },
                error: function () {
                    $('#loading-screen').html('<p>Erro ao carregar os dados.</p>');
                }
            });
        });
    </script>
}