@model CodeData_Connection.Areas.SistemaB.Controllers.EditarEquipamentoViewModel

@{
    ViewData["Title"] = "Editar Equipamento";
}

<h1>DADOS DO EQUIPAMENTO</h1>

<form asp-action="Editar" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Equipamento.Id" />

    <div class="form-group">
        <label asp-for="Equipamento.Codigo" class="control-label"></label>
        <input asp-for="Equipamento.Codigo" class="form-control" />
        <span asp-validation-for="Equipamento.Codigo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Equipamento.Modelo" class="control-label"></label>
        <input asp-for="Equipamento.Modelo" class="form-control" />
        <span asp-validation-for="Equipamento.Modelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Equipamento.Descricao" class="control-label"></label>
        <textarea asp-for="Equipamento.Descricao" class="form-control"></textarea>
        <span asp-validation-for="Equipamento.Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Equipamento.Marca" class="control-label"></label>
        <input asp-for="Equipamento.Marca" class="form-control" />
        <span asp-validation-for="Equipamento.Marca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Equipamento.SerialNumber" class="control-label"></label>
        <input asp-for="Equipamento.SerialNumber" class="form-control" />
        <span asp-validation-for="Equipamento.SerialNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Equipamento.PartNumber" class="control-label"></label>
        <input asp-for="Equipamento.PartNumber" class="form-control" />
        <span asp-validation-for="Equipamento.PartNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Equipamento.Condicao" class="control-label"></label>
        <select asp-for="Equipamento.Condicao" class="form-control">
            <option value="true">Ativo</option>
            <option value="false">Inativo</option>
        </select>
        <span asp-validation-for="Equipamento.Condicao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Equipamento.EstoqueId" class="control-label">Estoques</label>
        <select asp-for="Equipamento.EstoqueId" class="form-control select2">
            @foreach (var estoque in Model.Estoques)
            {
                <option value="@estoque.Id">@estoque.Nome</option>
            }
        </select>
        <span asp-validation-for="Equipamento.EstoqueId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Equipamento.DocumentoId" class="control-label">Documentos</label>
        <select asp-for="Equipamento.DocumentoId" class="form-control select2">
            @foreach (var documento in Model.Documentos)
            {
                <option value="@documento.Id">@documento.Nome</option>
            }
        </select>
        <span asp-validation-for="Equipamento.DocumentoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<script>
    $(document).ready(function() {
        $('.select2').select2();
    });
</script>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
