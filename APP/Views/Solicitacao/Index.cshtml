@{
    ViewData["Title"] = ViewBag.TipoSolicitacao? "Locação":"Homologação";
}

<div id="loading-screen">
    <div class="loader"></div>
    <p style="color: white">Carregando...</p>
</div>

<div id="dadosSolicitacao"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("ObterDadosSolicitacoes", "Solicitacao", new { tipoSolicitacao = @ViewBag.TipoSolicitacao })',
                type: 'GET',
                success: function (data) {
                    $('#loading-screen').hide();
                    $('#dadosSolicitacao').html(data);
                },
                error: function () {
                    $('#loading-screen').html('<p>Erro ao carregar os dados.</p>');
                }
            });
        });
    </script>
}