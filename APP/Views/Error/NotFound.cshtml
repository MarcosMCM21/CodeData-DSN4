@{
    ViewData["Title"] = "Item Não Encontrado";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Desculpe, não encontramos o que você procurava.</h1>
    <p class="lead">Tente novamente utilizando o botão abaixo ou volte para a página anterior.</p>

    <a href="javascript:location.reload()" class="btn btn-primary">Tentar novamente</a>
    <a href="javascript:history.back()" class="btn btn-secondary">Voltar para a Página Anterior</a>

    <div class="mt-5">
        <img src="~/images/not-found-illustration.svg" alt="Não encontrado" class="img-fluid" style="max-width: 300px;">
    </div>
</div>
